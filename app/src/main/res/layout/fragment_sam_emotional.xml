<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.sam_emotional.SamEmotionalFragment">

    <TextView
        android:id="@+id/textEmotional"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="With which Self Assessment Manikin did you identify with the most?"
        android:textAllCaps="true"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2_v"
        app:layout_constraintEnd_toStartOf="@+id/guideline4_h"
        app:layout_constraintStart_toStartOf="@+id/guideline1_h"
        app:layout_constraintTop_toTopOf="@+id/guideline1_v" />

    <ImageButton
        android:id="@+id/btnEmotional1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam1"
        android:padding="100dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEmotional2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toTopOf="@+id/guideline2_v" />

    <ImageButton
        android:id="@+id/btnEmotional2"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam2"
        app:layout_constraintBottom_toTopOf="@+id/btnEmotional3"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnEmotional1" />

    <ImageButton
        android:id="@+id/btnEmotional3"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam3"
        app:layout_constraintBottom_toTopOf="@+id/btnEmotional4"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnEmotional2" />

    <ImageButton
        android:id="@+id/btnEmotional4"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam4"
        app:layout_constraintBottom_toTopOf="@+id/btnEmotional5"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnEmotional3" />

    <ImageButton
        android:id="@+id/btnEmotional5"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam5"
        app:layout_constraintBottom_toTopOf="@+id/guideline3_v"
        app:layout_constraintEnd_toEndOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnEmotional4" />

    <ProgressBar
        android:id="@+id/pBarEmotional"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="48"

        android:progressBackgroundTint="@color/lightPurpel"
        app:layout_constraintBottom_toTopOf="@+id/guideline1_v"
        app:layout_constraintEnd_toStartOf="@+id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_h"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txtHighArousal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="low\nmood"
        android:textAllCaps="true"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline2_v"
        app:layout_constraintStart_toEndOf="@id/guideline1_h"
        app:layout_constraintEnd_toStartOf="@+id/btnEmotional1"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtLowArousal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="high\nmoode"
        android:textAllCaps="true"
        android:textColor="@color/teal_700"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3_v"
        app:layout_constraintStart_toEndOf="@id/guideline1_h"
        app:layout_constraintEnd_toStartOf="@+id/btnEmotional5"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82" />


</androidx.constraintlayout.widget.ConstraintLayout>