<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.sam_dominance.SamDominanceFragment">

    <TextView
        android:id="@+id/textDominance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="These Self-Assessment Manikins show different dimensions of dominance. Which one do you identify with?"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2_v"
        app:layout_constraintEnd_toStartOf="@+id/guideline4_h"
        app:layout_constraintStart_toStartOf="@+id/guideline1_h"
        app:layout_constraintTop_toTopOf="@+id/guideline1_v" />

    <ImageButton
        android:id="@+id/btnDominance1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam11"
        app:layout_constraintBottom_toTopOf="@+id/btnDominance2"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/textDominance"
        android:padding="100dp"/>

    <ImageButton
        android:id="@+id/btnDominance2"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam12"
        app:layout_constraintBottom_toTopOf="@+id/btnDominance3"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnDominance1" />

    <ImageButton
        android:id="@+id/btnDominance3"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam13"
        app:layout_constraintBottom_toTopOf="@+id/btnDominance4"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnDominance2" />

    <ImageButton
        android:id="@+id/btnDominance4"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam14"
        app:layout_constraintBottom_toTopOf="@+id/btnDominance5"
        app:layout_constraintEnd_toStartOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnDominance3" />

    <ImageButton
        android:id="@+id/btnDominance5"
        style="@style/buttonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sam15"
        app:layout_constraintBottom_toTopOf="@+id/guideline3_v"
        app:layout_constraintEnd_toEndOf="@id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/guideline1_h"
        app:layout_constraintTop_toBottomOf="@+id/btnDominance4" />

    <ProgressBar
        android:id="@+id/pBarDominance"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="72"

        android:progressBackgroundTint="@color/lightPurpel"
        app:layout_constraintBottom_toTopOf="@+id/guideline1_v"
        app:layout_constraintEnd_toStartOf="@+id/guideline4_h"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_h"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82" />


</androidx.constraintlayout.widget.ConstraintLayout>