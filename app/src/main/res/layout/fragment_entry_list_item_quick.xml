<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp" >


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parent_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentLayout_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/collapsedLayout_q"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/lightGreen"
                app:layout_constraintTop_toTopOf="parent">



                <ImageView
                    android:id="@+id/btnArrowDown_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:src="@drawable/ic_whitearrowdown"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/collapsedLayout_q"
                    app:layout_constraintEnd_toEndOf="@id/collapsedLayout_q" />


                <TextView
                    android:id="@+id/contentDate_q"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:text="dd:mm:yy"
                    android:textAppearance="@style/buttonStyle"
                    app:layout_constraintStart_toStartOf="@id/collapsedLayout_q"
                    app:layout_constraintTop_toTopOf="@id/collapsedLayout_q" />


                <TextView
                    android:id="@+id/contentTime_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:text="hh_mm"
                    android:textAppearance="@style/buttonStyle"
                    app:layout_constraintStart_toEndOf="@id/contentDate_q"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ContentActivity_q"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:text="Activity"
                    android:textAppearance="@style/buttonStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/contentTime_q"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandedLayout_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/collapsedLayout_q">

                <ImageView
                    android:id="@+id/btnArrowUp_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_up"
                    app:layout_constraintEnd_toEndOf="@id/expandedLayout_q"
                    app:layout_constraintTop_toBottomOf="@id/ContentThoughts_q" />



                <TextView
                    android:id="@+id/ContentThoughts_q"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="15dp"
                    android:text="Thoughts \nLorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>