<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textOverall"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="What was your\noverall modd?"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOverall1"
        style="@style/buttonStyle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOverall" />

    <Button
        android:id="@+id/btnOverall2"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOverall1"
        style="@style/buttonStyle"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/btnOverall3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOverall2"
        style="@style/buttonStyle"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/btnOverall4"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOverall3"
        style="@style/buttonStyle"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/btnOverall5"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOverall4"
        style="@style/buttonStyle"
        android:background="@drawable/button"/>


</androidx.constraintlayout.widget.ConstraintLayout>