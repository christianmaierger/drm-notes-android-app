<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textThoughts"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="Which thoughts occurred?"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSubmitThoughts"
        style="@style/buttonStyle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addThoughts_editText"
        app:layout_constraintVertical_bias="0.211" />

    <EditText
        android:id="@+id/addThoughts_editText"
        android:layout_width="249dp"
        android:layout_height="155dp"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:ems="10"
        android:hint="Enter thoughts here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textThoughts" />
    <!--inputType muss wahrscheinlich noch geÃ¤ndert werden, um Text weiterzubearbeiten -->


</androidx.constraintlayout.widget.ConstraintLayout>