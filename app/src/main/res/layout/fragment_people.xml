<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textFeeling"
        android:layout_width="255dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="With whom have you been togehter?"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFriends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColleagues"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/btnFriends"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Colleagues"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/btnStrangers"
        app:layout_constraintEnd_toStartOf="@+id/btnFriends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFeeling" />

    <Button
        android:id="@+id/btnFriends"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:gravity="center"
        android:text="Friends"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnColleagues"
        app:layout_constraintTop_toBottomOf="@+id/textFeeling" />

    <Button
        android:id="@+id/btnPeopleOther"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:gravity="center"
        android:text="Other"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNeighbours"
        app:layout_constraintTop_toBottomOf="@+id/btnFamily" />

    <Button
        android:id="@+id/btnStrangers"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Strangers"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/btnNeighbours"
        app:layout_constraintEnd_toStartOf="@+id/btnFamily"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFamily"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Family"
        app:layout_constraintBottom_toTopOf="@+id/btnPeopleOther"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStrangers" />

    <Button
        android:id="@+id/btnNeighbours"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:gravity="center"
        android:text="Neighbours"
        android:textAllCaps="true"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPeopleOther"
        app:layout_constraintEnd_toStartOf="@+id/btnPeopleOther"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>